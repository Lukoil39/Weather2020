<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="themeName">light</item>
        <item name="primary_color">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background_color">@color/colorBackground</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="card_color">@color/colorBackground</item>
        <item name="text_color">@color/colorGrey</item>
        <item name="highlight_color">@color/color_highlight</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorBackground</item>
    </style>

    <!-- Dark application theme. -->
    <style name="Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="themeName">dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="primary_color">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="background_color">@color/colorBackgroundDark</item>
        <item name="android:textColor">@color/colorBackground</item>
        <item name="text_color">@color/colorBackground</item>
        <item name="android:textColorHint">@color/colorBackground</item>
        <item name="card_color">@color/colorLightGrey</item>
        <item name="highlight_color">@color/color_highlight_dark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:background">@color/colorPrimary</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="imageButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="rightRadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>

        <item name="android:layoutDirection">rtl</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">?attr/text_color</item>
    </style>

    <style name="dark_alert_dialog_theme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:textColor">@color/colorBackground</item>
    </style>

    <style name="alert_dialog_theme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="darkButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>

    </style>


</resources>
